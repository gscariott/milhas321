<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Nome' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label 'Tipo de usuário' %>
    <%= form.select :user_type, [ ['Usuário', 0], ['Companhia Aérea', 1] ] %>
  </div>

  <div class="field">
    <%= form.label 'CPF/CNPJ' %>
    <%= form.number_field :cpf_cnpj %>
  </div>

  <div class="field">
    <%= form.label 'Senha' %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label 'Confirmação da senha' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar' %>
  </div>
<% end %>
