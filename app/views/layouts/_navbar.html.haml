%nav.navbar.navbar-dark.navbar-expand-lg.bg-dark.px-5.py-4
  .container-fluid 
    = link_to 'Milhas321', root_path, class: 'navbar-brand fs-3'
    .navbar-nav
      - if current_user.is_support?
        = link_to 'Gerenciamento', dashboard_path, class: 'nav-link'
      - if current_user.is_airline?
        = link_to 'Buscar passagens', tickets_path, class: 'nav-link'
        = link_to 'Histórico de vendas', my_sales_airline_path(current_user.airline), class: 'nav-link'
        = link_to 'Gerenciar lotes', batches_airline_path(current_user.airline), class: 'nav-link'
        .dropdown
          = link_to "#{current_user.email}", '#', class: "nav-link dropdown-toggle", role: "button", id: "profileDropdownLink", 'data-bs-toggle': "dropdown", 'aria-expanded': "false"
          %ul.dropdown-menu.dropdown-menu-end
            %li= link_to 'Gerenciar companhia aérea', airline_path(current_user.airline), class: 'dropdown-item'
            %li= link_to 'Sair', logout_path, class: 'dropdown-item'
      - else
        = link_to 'Buscar passagens', tickets_path, class: 'nav-link'
        = link_to 'Minhas passagens', my_tickets_user_path(current_user), class: 'nav-link'
        = link_to 'Milhas', miles_user_path(current_user), class: 'nav-link'
        .dropdown
          = link_to "#{current_user.email}", '#', class: "nav-link dropdown-toggle", role: "button", id: "profileDropdownLink", 'data-bs-toggle': "dropdown", 'aria-expanded': "false"
          %ul.dropdown-menu.dropdown-menu-end
            %li= link_to 'Perfil', user_path(current_user), class: 'dropdown-item'
            %li= link_to 'Sair', logout_path, class: 'dropdown-item'
